{
  "name": "prettier-plugin-wp-block-html",
  "version": "0.2.0",
  "description": "A Prettier plugin for HTML in WordPress Block Theme.",
  "keywords": [
    "prettier-plugin",
    "prettier",
    "wordpress",
    "html"
  ],
  "author": "Nao Komura",
  "license": "MIT",
  "packageManager": "npm@9.4.0",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "type": "commonjs",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/co6x0/prettier-plugin-wp-block-html"
  },
  "scripts": {
    "prepare": "npm run build",
    "format": "prettier --write ./test/examples/*.html --plugin ./dist",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "esbuild ./src/index.js --bundle --platform=node --format=esm --outfile=./dist/index.esm.js",
    "build:cjs": "esbuild ./src/index.js --bundle --platform=node --format=cjs --outfile=./dist/index.cjs.js",
    "test:esm": "node ./test/prettier.mjs",
    "test:cjs": "node ./test/prettier.js"
  },
  "devDependencies": {
    "@types/node": "^20.9.4",
    "esbuild": "^0.19.7",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "prettier": "^3.1.0"
  }
}
